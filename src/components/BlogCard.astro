---
const posts = [
	{
		title: "Getting Started with Astro.js",
		date: "June 15, 2023",
		excerpt: "Learn how to build lightning-fast websites with Astro.js",
	},
	{
		title: "Mastering Tailwind CSS",
		date: "May 22, 2023",
		excerpt: "Tips and tricks for efficient styling with Tailwind CSS",
	},
];
---

<div
	class="col-span-1 row-span-1 bg-card text-card-foreground rounded-xl overflow-hidden shadow-md border border-border hover:shadow-lg transition-all duration-300"
>
	<div class="p-6">
		<h3 class="text-xl font-bold mb-4">Latest Articles</h3>
		<div class="space-y-4">
			{
				posts.map((post) => (
					<a
						href="#"
						class="block p-4 rounded-lg hover:bg-muted transition-colors"
					>
						<h4 class="font-semibold">{post.title}</h4>
						<p class="text-sm text-muted-foreground mt-1">
							{post.date}
						</p>
						<p class="mt-2 text-sm">{post.excerpt}</p>
					</a>
				))
			}
		</div>
		<a href="#" class="inline-block mt-4 text-primary hover:underline"
			>View all articles â†’</a
		>
	</div>
</div>
