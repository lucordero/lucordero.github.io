---
const projects = [
	{
		title: "E-commerce Platform",
		description:
			"A full-stack e-commerce solution with payment integration",
		tags: ["React", "Node.js", "MongoDB"],
		image: "/placeholder.svg?height=150&width=250",
	},
	{
		title: "Portfolio Website",
		description:
			"A responsive portfolio website built with Astro and Tailwind",
		tags: ["Astro", "Tailwind CSS", "TypeScript"],
		image: "/placeholder.svg?height=150&width=250",
	},
];
---

<div
	class="col-span-1 row-span-1 bg-card text-card-foreground rounded-xl overflow-hidden shadow-md border border-border hover:shadow-lg transition-all duration-300"
>
	<div class="p-6">
		<h3 class="text-xl font-bold mb-4">Projects</h3>
		<div class="space-y-4">
			{
				projects.map((project) => (
					<div class="group relative overflow-hidden rounded-lg">
						<img
							src={project.image || "/placeholder.svg"}
							alt={project.title}
							class="w-full h-40 object-cover"
						/>
						<div class="absolute inset-0 bg-black/70 flex flex-col justify-end p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
							<h4 class="text-white font-semibold">
								{project.title}
							</h4>
							<p class="text-white/80 text-sm">
								{project.description}
							</p>
							<div class="flex gap-2 mt-2 flex-wrap">
								{project.tags.map((tag) => (
									<span class="text-xs bg-primary/20 text-primary-foreground px-2 py-1 rounded">
										{tag}
									</span>
								))}
							</div>
						</div>
					</div>
				))
			}
		</div>
	</div>
</div>
