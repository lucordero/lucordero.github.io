---
const technologies = [
	{ name: "HTML", icon: "html5", level: 90 },
	{ name: "CSS", icon: "css3", level: 85 },
	{ name: "JavaScript", icon: "javascript", level: 90 },
	{ name: "TypeScript", icon: "typescript", level: 80 },
	{ name: "React", icon: "react", level: 85 },
	{ name: "Node.js", icon: "nodejs", level: 75 },
	{ name: "Astro", icon: "astro", level: 70 },
	{ name: "Tailwind", icon: "tailwindcss", level: 85 },
];
---

<div
	class="col-span-1 row-span-1 bg-card text-card-foreground rounded-xl overflow-hidden shadow-md border border-border hover:shadow-lg transition-all duration-300"
>
	<div class="p-6">
		<h3 class="text-xl font-bold mb-4">Technologies</h3>
		<div class="grid grid-cols-2 gap-4">
			{
				technologies.map((tech) => (
					<div class="flex flex-col gap-1">
						<div class="flex items-center gap-2">
							<div class="w-6 h-6 flex items-center justify-center text-primary">
								<span class="text-lg">
									{tech.icon === "html5"
										? "🌐"
										: tech.icon === "css3"
											? "🎨"
											: tech.icon === "javascript"
												? "📜"
												: tech.icon === "typescript"
													? "📘"
													: tech.icon === "react"
														? "⚛️"
														: tech.icon === "nodejs"
															? "🟢"
															: tech.icon ===
																  "astro"
																? "🚀"
																: tech.icon ===
																	  "tailwindcss"
																	? "💨"
																	: "🔧"}
								</span>
							</div>
							<span>{tech.name}</span>
						</div>
						<div class="w-full bg-muted rounded-full h-2">
							<div
								class="bg-primary h-2 rounded-full"
								style={`width: ${tech.level}%`}
							/>
						</div>
					</div>
				))
			}
		</div>
	</div>
</div>
